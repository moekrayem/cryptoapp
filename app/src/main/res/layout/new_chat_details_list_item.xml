<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_details_list_item_outer_container_cl">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/chat_details_list_item_root_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_message_background_right">

        <TextView
            android:id="@+id/chat_details_list_item_message_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/chat_details_list_item_message_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@id/chat_details_list_item_message_content_tv"
            app:layout_constraintTop_toBottomOf="@id/chat_details_list_item_message_content_tv" />

    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>